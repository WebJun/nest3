[client]
default-character-set=utf8mb4

[mysql]
default-character-set=utf8mb4

[mysqld]
collation-server = utf8mb4_unicode_ci
init-connect='SET NAMES utf8mb4'
character-set-server = utf8mb4
connect_timeout = 12
skip-host-cache
skip-name-resolve
user = mysql
datadir = /var/lib/mysql
!includedir /etc/mysql/conf.d/